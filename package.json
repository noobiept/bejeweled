{
    "name": "bejeweled",
    "version": "2.0.0",
    "packageManager": "npm@10.7.0",
    "type": "module",
    "dependencies": {
        "@drk4/utilities": "^6.2.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.6.0",
        "@types/createjs": "^0.0.32",
        "eslint": "^8.57.0",
        "globals": "^15.8.0",
        "prettier": "^3",
        "typescript": "^5",
        "typescript-eslint": "^7.15.0",
        "vite": "^5"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf"
    },
    "scripts": {
        "dev": "vite",
        "dev:w": "tsc --watch",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "format:check": "prettier --check \"**/*.{html,css,json,js,ts,md}\"",
        "format:run": "prettier --write \"**/*.{html,css,json,js,ts,md}\"",
        "check:types": "tsc -p tsconfig.json --noEmit --skipLibCheck",
        "lint": "eslint source"
    }
}
